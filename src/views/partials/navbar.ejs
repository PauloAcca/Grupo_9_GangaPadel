            <% for (let i=0; i<categoria.length; i++) {%>
                <a href="/products/cat/<%= categoria[i].categoria %>"><%= categoria[i].categoria %></a>
            <% } %>
        </div>
    </div>
    <div class="dropdown">
        <a href="/products">Marcas<i class="fa-solid fa-chevron-down main"></i></a>
