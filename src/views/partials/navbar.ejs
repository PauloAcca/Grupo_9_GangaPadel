            <% for (let i=0; i<marca.length; i++) {%>
                <a href="/products/<%= marca[i].nombreMarca %>"><%= marca[i].nombreMarca %></a>
            <% } %>
        </div>
    </div>
    
    <a href="#">Ofertas</a>
